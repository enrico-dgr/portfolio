{
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./build",
    "target": "es5",
    "module": "commonjs",
    "allowJs": true,
    "jsx": "react",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "lib": ["DOM"],
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "stripInternal": true,
    "declaration": false
  },
  "exclude": ["./build"]
}
