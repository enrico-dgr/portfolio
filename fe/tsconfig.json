{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
      "common-builders/*": ["srcCommon/builders/*"],
			"common-entities/*": ["srcCommon/entities/*"],
			"common-systems/*": ["srcCommon/systems/*"],
			"common-types/*": ["srcCommon/types/*"],
			"entities-l/*": ["src/components/entities/*"],
      "controllers-l/*": ["src/components/controllers/*"],
      "systems-l/*": ["src/components/systems/*"],
      "types-l/*": ["src/types/*"],
      "events-l/*": ["src/events/*"],
      "hooks-l/*": ["src/hooks/*"],
      "utils-l/*": ["src/utils/*"],
      "assets-l/*": ["assets/*"]
		},
		"noEmit": false,
		"outDir": "./build",
		"target": "es5",
		"module": "commonjs",
		"allowJs": true,
		"jsx": "react",
		"esModuleInterop": true,
		"strict": true,
		"moduleResolution": "node",
		"lib": ["DOM"],
		"sourceMap": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"stripInternal": true,
		"declaration": false
	},
	"exclude": ["./build"]
}
