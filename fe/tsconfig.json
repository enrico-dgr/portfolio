{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"entities-l/*": ["src/components/funcComponents/entities/*"],
      "controllers-l/*": ["./src/components/funcComponents/controllers/*"],
      "systems-l/*": ["src/components/funcComponents/systems/*"],
      "types-l/*": ["src/types/*"],
      "events-l/*": ["src/events/*"],
      "hooks-l/*": ["src/hooks/*"],
      "assets-l/*": ["src/assets/*"]
		},
		"noEmit": false,
		"outDir": "./build",
		"target": "es5",
		"module": "commonjs",
		"allowJs": true,
		"jsx": "react",
		"esModuleInterop": true,
		"strict": true,
		"moduleResolution": "node",
		"lib": ["DOM"],
		"sourceMap": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"stripInternal": true,
		"declaration": false
	},
	"exclude": ["./build"]
}
